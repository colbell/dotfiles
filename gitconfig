# -*- mode: conf; -*-
[core]
  pager=less -x2
  autocrlf = input
  safecrlf = true

[user]
  name = Colin Bell
  email = col@baibell.org

[color]
  ui = true

[push]
  default = simple

[http]
  sslVerify = false

# [diff]
#   tool = icdiff
#   # For Github-style word diffs
#   # wordRegex = [^[:space:]]

# [difftool]
#   prompt = false

# [difftool "icdiff"]
#   cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE

[apply]
  whitespace = nowarn

[commit]
  template = ~/.gitmessage

# [merge]
#   conflictstyle = diff3

[transfer]
	fsckobjects = true

[fetch]
	fsckobjects = true

[fsck]
  zeroPaddedFilemode = ignore

[alias]
  # Show all aliases.
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

  br = branch
  co = checkout
  st = status -sb

  c  = commit
  cm = commit -m

  d  = diff
  dc = diff --cached

  l       = log --graph --decorate --pretty=oneline --abbrev-commit
  ll      = log --graph --decorate --pretty=oneline --numstat
  h       = log --oneline --decorate
  hl      = log --oneline --decorate --numstat
  slog    = shortlog -s -n -e

  # git contains 0fed09265
  contains  = branch -r --contains

  # All commits for a file, pass file name as an argument
  fl = log -u

  unpushed = cherry -v
  unmerged = log --oneline ..@{u}

  type = cat-file -t
  dump = cat-file -p

  stash-all = stash --include-untracked

  # Show list of commits different between 2 branches
  # E.G. br-diff master..origin/master
  br-diff = log --left-right --graph --cherry-pick --oneline

  # Reset to before last commit.
  undo = reset --soft HEAD^

[help]
	autoCorrect = -1

[magit]
	hideCampaign = true

[rerere]
	enabled = true

[color "decorate"]
	tag = magenta
