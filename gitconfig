# -*- mode: conf; -*-
[core]
  pager=less -x2
  autocrlf = input
  safecrlf = true

[user]
  name = Colin Bell
  email = col@baibell.org

[color]
  ui = true

[push]
  default = simple

[http]
  sslVerify = false

# [diff]
#   tool = icdiff
#   # For Github-style word diffs
#   # wordRegex = [^[:space:]]

# [difftool]
#   prompt = false

# [difftool "icdiff"]
#   cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE

[apply]
  whitespace = nowarn

[commit]
  template = ~/.gitmessage

# [merge]
#   conflictstyle = diff3

# Causes failure when installing SpaceVim plugins
#[transfer]
#  fsckobjects = true

[alias]
  br = branch
  cancel = reset --soft HEAD^
  co = checkout

  lg      = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lgd     = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --abbrev-commit
  l       = log --pretty=format:"%C(auto)%h%C(auto)%d\\ %Creset%s%Cgreen(%cr)%Cblue[%cn]" --decorate
  ld      = log --pretty=format:"%C(auto)%h%C(auto)%d\\ %Creset%s%Cgreen(%cD)%Cblue[%cn]" --decorate
  h       = log --oneline --decorate
  slog    = shortlog -s -n -e

  # git contains 0fed09265
  contains  = branch -r --contains

  # All commits for a file, pass file name as an argument
  fl = log -u

  # Short status
  st = status -sb

  unpushed = cherry -v

  type = cat-file -t
  dump = cat-file -p

  stash-all = stash --include-untracked

  # Show list of commits different between 2 branches
  # E.G. br-diff master..origin/master
  br-diff = log --left-right --graph --cherry-pick --oneline

  # Reset to before last commit.
  undo = reset --soft HEAD^

[help]
	autoCorrect = -1

[magit]
	hideCampaign = true
