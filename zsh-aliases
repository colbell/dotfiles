# -*- shell-script -*-

if grep -q 'ID=arch' /etc/os-release; then
  alias pkg-update='sudo etckeeper pre-install && sudo pacman -Syu && sudo etckeeper post-install'
fi

if grep -q 'ID_LIKE=debian' /etc/os-release; then
  alias apttiude='aptitude'
  alias apttidue='aptitude'
  alias pkg-update='sudo apt update && sudo apt full-upgrade'
fi

alias sduo=sudo

alias h='history 1'

alias openports='netstat --all --numeric --programs --inet'

alias ,='ls -CFs'
alias r='ls -ltr'

alias wttr='curl wttr.in'
